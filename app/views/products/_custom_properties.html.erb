<%= f.fields_for :properties do |builder| %>
  <%= builder.text_field :name, :class => "properties-input span1", 
    :readonly => true, 'data-property' => builder.object.name %>
  <br/><br/>
  
  <%= builder.fields_for :property_values do |b| %>
    <%= check_box_tag :check_property, '', false, :class => 'check-property-value', 
      'data-property' => builder.object.name, 
      'data-property-value' => b.object.name  %>
    <%= b.object.name %>&nbsp;&nbsp;
  <% end %>
  <br/><br/>
<% end %>

<table id='skus-table' class='table table-striped table-condensed span4'>
  <thead>
    <tr>
      <th>颜色</th>
      <th>尺码</th>
      <th>价格</th>
      <th>库存</th>
      <th>商家编码</th>
    </tr>
  </thead>
  
  <tbody id='skus-tbody'>
    <%= f.fields_for :skus do |builder| %>
    <tr>
      <td><%= builder.text_field :value_0, :class => 'input-mini', :readonly => true %></td>
      <td><%= builder.text_field :value_1, :class => 'input-mini', :readonly => true %></td>
      <td><%= builder.text_field :price, :class => 'input-mini' %></td>
      <td><%= builder.text_field :num, :class => 'input-mini' %></td>
      <td><%= builder.text_field :custom_id, :class => 'input-mini' %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<script>
  $(document).ready(function(){
    App.Views.Products.CustomProperties.init();
  });
</script>