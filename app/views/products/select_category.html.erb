
<h2>选择品类</h2>
<br/>

<% if notice %>
<div class="alert">
  <a class="close" data-dismiss="alert">×</a>
  <strong><%= notice %></strong>
</div>
<% end %>

<%=form_tag('/products/new', :method =>:get, :class => 'form-horizontal') do %>

  <div class="control-group">
    <div class="controls">

      <%= select_tag "first_level_category_id", 
        options_from_collection_for_select(@root_categories, "id", "name"),
        :class => 'min', :multiple => "multiple" %>
      <span></span>
    </div>
  </div>

  <div class="form-actions">
    <%= submit_tag " 下一步 ", :id => 'next-button', :class => "btn btn-success" %>&nbsp;&nbsp;
  </div>
<% end %>

<script>
  $(document).ready(function() {    
    App.Views.Products.SelectCategory.init();
  });
</script>