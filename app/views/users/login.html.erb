
<h1>
  登录
</h1>

<% unless flash[:notice].blank? %>
  <div class="alert alert-error">
    <%= flash[:notice] %>
  </div>
<% end %>

<%= form_for(@user, :url => check_login_path, :html => {:class => 'form-horizontal'}) do |f| %>
  
  <div class="control-group">
    <label class="control-label" for="focusedInput">用户名</label> 
    <div class="controls">
      <%= f.text_field :username, :class => 'span2' %>
    </div>
  </div>

  <div class="control-group">
    <label class="control-label">密码</label>
    <div class="controls">
    <%= f.password_field :password, :class => 'span2' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit "登录", :class => "btn btn-primary" %>&nbsp;&nbsp;&nbsp;&nbsp;
    没有账号？
    <%= link_to '注册', register_path %>
  </div>
<% end %>
