<div class='alert alert-error hide'>
  <span id='alert-content'>
  </span>
  <button class="close" data-dismiss="alert">×</button>
</div>

<div class="row">
  <div class="span12">
    <h1>
      2. 同步店铺数据
    </h1>

    <%= image_tag '/images/loading.gif', :size => '50x50', 
      :id => 'loading-image', :style => 'margin:50px 0 50px 30px;' %>
  </div>
</div>
<div class="row">
  <div class="span12">
    <p>
      请稍后，正在同步店铺数据。
      
    </p>
  </div>
</div>
<div class="row" style='margin: 30px 0 30px 0;'>
  <div class="span12 offset3">
    <!-- <%= link_to ' 返回上一步 ', init_step_one_path, :id => 'previous-button', :class => '' %>     -->
  </div>
</div>

<script>
  jQuery(function($) {

    $.get('/init_sync', function(result) {
      if(result == 'success') {
        window.location = '/';
      }else {
        $('#loading-image').attr('src', '/images/loading-stop.png');
        $('#alert-content').html('抱歉，同步出错了，请联系客服');
        $('.alert').show();      
      }
    })
    .complete(function() {
      $('#loading-image').attr('src', '/images/loading-stop.png');
      $('#alert-content').html('抱歉，同步出错了，请联系客服');
      $('.alert').show();            
    });
    
  });

</script>