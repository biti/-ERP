<h2 style='margin:5px 0 5px 0;color:#999;'>
  <%= params[:date]%> 页面情况
</h2>
<%= return_url %>

<br/><br/>

<div id="dan" class="form">
<%= form_for(@dan, 
  :url => save_page_dan_path(@dan), :html => {:class => 'form-horizontal'}) do |f| %>
  
  <%= hidden_field_tag 'return_url', params[:return_url]%>

  <% unless f.error_messages.blank? %>
    <div class="alert alert-error">
      <%= f.error_messages %>
    </div>
  <% end %>

  <div class="inputs">

    <div class="control-group">
      <label class="control-label">页面提交id</label>
      <div class="controls">
      <%= f.text_field :page_id, :class => 'span2' %>
      </div>
    </div>

    <div class="control-group">
      <label class="control-label">备注</label>
      <div class="controls">
        <%= f.text_area :remark, :size => '2x4', :class => 'span4' %>
      </div>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit "提交", :class => "btn btn-primary" %> 或者 
    <%= link_to '返回', dans_path + '?date=' + params[:date] %>
  </div>
<% end %>
</div>
