<%= form_for(:order, :url => '#', :html => {:class => 'form-horizontal'}) do |f| %>
  
  <% unless f.error_messages.blank? %>
    <div class="alert alert-error">
      <%= f.error_messages %>
    </div>
  <% end %>

  <div class="control-group">
    <label class="control-label">产品名称</label>
    <div class="controls">
      <%= f.text_field :name, :class => 'span2 ' %>
    </div>
  </div>

  <div class="control-group">
    <label class="control-label">sku属性</label>
    <div class="controls">
      <%= f.text_field :name, :class => 'span2 ' %>
    </div>
  </div>

  <div class="control-group">
    <label class="control-label">数量</label>
    <div class="controls">
      <%= f.text_field :name, :class => 'span2 ' %>
    </div>
  </div>


<% end %>