<%= form_for :delivery, :url => print_expresses_deliveries_path, 
  :html => {:target =>'_blank',:id=>'print-modal-form',
    :method=>'get',:class=>'form-horizontal'} do |f| %>  
  
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal">×</button>
    <h3>批量打印运单</h3>
  </div>

  <div class="modal-body">

    <div class="control-group">
      <label class="control-label">选择模板</label>
      <div class="controls">
        <%= template_select %>
        <p class="help-block">
          <br/>
          打印效果欠佳？花三分钟 <%= link_to '定制模板', delivery_templates_path %>
        </p>
      </div>
    </div>

<!--     <div class="control-group">
      <label class="control-label">起始运单号</label>
      <div class="controls">
        <%= f.text_field :first_delivery_no, :class => 'span2 ' %>
      </div>
    </div> -->

  </div>
  
  <div class="modal-footer">
    <a href="#" class="btn" data-dismiss="modal">关闭</a>
    <%= link_to " 确定 ", 'javascript:;', :id => 'print-form-submit', :class => "btn btn-primary" %>
  </div>
<% end %>
